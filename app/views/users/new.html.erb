
<%= render layout: 'components/front' do %>

    <h1 class="text-2xl font-medium">Create an Account.</h1>  

    <%= form_with scope: :user, url: signup_path, local: true, class: 'front form' do |form| %>
        
        <div class="form-group">
            <%= form.label :username %>
            <%= form.text_field :username %>
        </div>

        <div class="form-group">
            <%= form.label :email %>
            <%= form.email_field :email %>
        </div>
        
        <div class="form-group">
            <%= form.label :password %>
            <%= form.password_field :password %>
        </div>

        <div class="form-group">
            <%= form.label :password_confirmation %>
            <%= form.password_field :password_confirmation %>
        </div>

        <%= form.submit 'create account', class: 'confirm-button self-center' %>

        <p class="text-center">Already have an account? <%= link_to "Log In.", login_path, class: 'hyper-link' %></p>

    <% end %>

        <% if @user.errors.any? %>
        <ul class="notices">
            <% @user.errors.full_messages.each do |message| %>
                <li class="error-message"><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    <% if flash[:notice] %>
    <div class="notices">
        <p class="error-message"><%= flash[:notice] %></p>
    </div>
    <% end %>
<% end %>

