
<main class="relative font-hand flex flex-wrap justify-center items-center gap-12 p-4 ">

        <% if @category && @category.errors.any? %>
            <ul class="notices">
                <% @category.errors.full_messages.each do |message| %>
                    <li class="error-message"><%= message %></li>
                <% end %>
            </ul>
        <% end %>

<div class="flex flex-col items-center gap-2">
    <%= link_to raw("<span>&#8592;</span> back to all categories"), categories_path, class: "paper | text-center shadow-md origin-center text-2xl", style: "transform: rotate(#{rand(-3..3)}deg)", onmouseover: "this.style.transform='rotate(#{rand(-3..3)}deg) translateY(-16%)';", onmouseout: "this.style.transform='rotate(#{rand(-3..3)}deg)'"%>
    <%= button_to "Delete", category_delete_path,  form: { class: 'paper | text-center shadow-md text-2xl',  style: "transform: rotate(#{rand(-4..4)}deg);", onmouseover: "this.style.transform='rotate(0deg) translateY(-16%)';", onmouseout:"this.style.transform='rotate(#{rand(-4..4)}deg)'" } , method: :delete%>
</div>

<div class="sticky-note | w-[min(400px,90%)]" style="transform: rotate(<%= rand(-3..3)%>deg)" id="stickyform">
    <%= form_with scope: :category, url: category_update_path, method: :patch, local: true, html:{ class:'flex flex-col'} do |form| %>


        <p class="underline text-center">Edit Category</p>

        <%= form.label :name, "Name:" %>
        <%= form.text_field :name, class: 'bg-transparent border-t-0 border-x-0 border-dotted border-b-4 border-black' %>

        <%= form.label :description, "Description:" %>
        <%= form.text_field :description, class: 'bg-transparent border-t-0 border-x-0 border-dotted border-b-4 border-black' %>

        <%= form.submit "Update It!", class: 'mt-4 cursor-pointer'%>
    <% end %>
</div>
</main>