<%= render layout: 'components/front' do %>

    <h1 class="text-2xl font-medium">Welcome back.</h1>  

    <%= form_with scope: :user, url: login_path, local: true, class: 'front form' do |form| %>

        <div class="form-group">
            <%= form.label :email %>
            <%= form.email_field :email %>
        </div>
        
        <div class="form-group">
            <%= form.label :password %>
            <%= form.password_field :password %>
        </div>

        <%= form.submit 'log in', class: 'confirm-button self-center' %>

        <p class="text-center">Don't have an account? <%= link_to "Sign up.", signup_path, class: 'hyper-link' %></p>

    <% end %>

        <% if @user.errors.any? %>
        <ul class="notices">
            <% @user.errors.full_messages.each do |message| %>
                <li class="error-message"><%= message %></li>
            <% end %>
        </ul>
    <% end %>

        <% if flash[:notice] %>
    <div class="notices">
        <p class="success-message"><%= flash[:notice] %></p>
    </div>
    <% end %>

<% end %>

